@page
@model RegisterModel
@{
    ViewData["Title"] = "Home page";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="text-center">
        <div>
            <h1 class="display-4">Achadinhos ... Tela de registro WIP</h1>
            <p>Preencha o formulario abaixo e clique em cadastrar para criar um novo usuario.</p>
        </div>
        <div class="d-flex justify-content-center align-items-center">
            <form method="post" style="width: 50vw;" class="container mt-4 border p-4 rounded shadow">
                <fieldset class="row g-2 mb-5">
                    <div class="col-md-6">
                        <label for="UserName" class="form-label">Usuário</label>
                        <input type="text" name="UserName" id="UserName" class="form-control" value="TestUser" required/>
                        <span asp-validation-for="user.UserName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label for="Password" class="form-label">Senha</label>
                        <input type="Password" name="Password" id="Password" class="form-control" value="password" required/>
                    </div>
                </fieldset>
                <fieldset class="row g-2 mb-5">
                        <div class="col-md-4">
                            <label for="FirstName" class="form-label">Nome</label>
                            <input type="text" name="FirstName" id="FirstName" class="form-control" value="Sad" required/>
                        </div>
                        <div class="col-md-4">
                            <label for="SurName" class="form-label">Sobrenome</label>
                            <input type="text" name="SurName" id="SurName" class="form-control" value="Developer" required/>
                        </div>
                        <div class="col-md-4">
                            <label for="Birthday" class="form-label">Data de Nascimento</label>
                            <input type="date" name="Birthday" id="Birthday" class="form-control" value="1994-04-28" required/>
                        </div>

                        <div class="col-md-6">
                            <label for="Email" class="form-label">Email</label>
                            <input type="Email" name="Email" id="Email" class="form-control" value="test@test.com" required/>
                        </div>
                        <div class="col-md-6">
                            <label for="Phone" class="form-label">Telefone</label>
                            <input type="text" name="Phone" id="Phone" class="form-control" value="(62) 9 8008 0637" required/>
                        </div>
                </fieldset>
                <fieldset class="row g-2 mt-5">
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-success w-75">Registrar</button>
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-dark">Registrar Usuário Fantasma</button>
                    </div>
                    <div class="col-md-4">
                        <button type="reset" class="btn btn-danger">Limpar campos</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</body>